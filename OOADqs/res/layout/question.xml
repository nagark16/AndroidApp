        android:onClick="onRadioButtonClicked"/>
	
	<RadioButton android:id="@+id/option4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:onClick="onRadioButtonClicked"/>
	</RadioGroup>
